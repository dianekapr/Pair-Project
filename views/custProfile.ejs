        }

        .btn-secondary {
            background-color: #28a745;
            color: white;
            border: none;
        }

        .btn-secondary:hover {
            background-color: #218838;
        }

        .btn-logout {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .btn-logout:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>
    <%- include('navbar') %>

    <div class="profile-container">
        <% if (profile.profilePicture) { %>
            <img src="<%= profile.profilePicture %>" alt="Profile Picture">
        <% } else { %>
            <img src="/default-avatar.png" alt="Default Profile Picture">
        <% } %>
        
        <% if (!profile) { %>
            <h2><%= user.username %></h2>
            <p><%= user.email %></p>
            <a href="/profile/add" class="btn btn-primary">Add Profile</a>
        <% } else { %>
            <h2><%= profile.name %></h2>
            <p><strong>Gender:</strong> <%= profile.gender === 'L' ? 'Male' : 'Female' %></p>
            <p><strong>Bio:</strong> <%= profile.bio %></p>
            <p><strong>Phone:</strong> <%= profile.phoneNumber %></p>
            <p><strong>Born Date:</strong> <%= profile.bornDate.toISOString().split('T')[0] %></p>

            <a href="/profile/edit" class="btn btn-secondary">Edit Profile</a>
            <form action="/logout" method="POST">
                <button type="submit" class="btn btn-logout">Logout</button>
            </form>
        <% } %>
    </div>
</body>
</html>