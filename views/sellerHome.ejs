<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }
        .navbar {
            background-color: midnightblue;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: midnightblue;
        }

        .navbar .sopi {
            font-size: 28px;
            font-weight: bold;
            color: burlywood;
            text-decoration: none;
            flex: 1;
        }

        .search-form {
            display: flex;
            align-items: center;
            flex: 2;
            margin: 0 20px;
            max-width: 600px;
        }

        .search-box {
            padding: 10px;
            border: none;
            border-radius: 5px;
            width: 100%;
        }

        .search-button {
            padding: 10px 20px;
            background-color: white;
            color: midnightblue;
            border: none;
            border-radius: 5px;
            margin-left: 10px;
            cursor: pointer;
        }

        .search-button:hover {
            background-color: cornflowerblue;
        }

        .nav-buttons {
            display: flex;
            gap: 10px;
            flex: 1;
            justify-content: flex-end;
        }

        .nav-buttons button {
            padding: 10px 20px;
            background-color: midnightblue;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }

        .nav-buttons button:hover {
            background-color: cornflowerblue;
        }
        .container {
            width: 90%;
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h2 {
            margin-bottom: 20px;
            color: midnightblue;
        }

        .add-product-btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            background-color: midnightblue;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-bottom: 20px;
        }

        .add-product-btn:hover {
            background-color: cornflowerblue;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .table th, .table td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: midnightblue;
            color: white;
        }

        .table tbody tr:hover {
            background-color: #f0f8ff;
        }

        .product-img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 5px;
        }

        .edit-btn, .delete-btn {
            padding: 8px 12px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            display: inline-block;
        }

        .edit-btn {
            background-color: #28a745;
            color: white;
            margin-right: 5px;
        }

        .edit-btn:hover {
            background-color: #218838;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
        }

        .delete-btn:hover {
            background-color: #c82333;
        }

        @media (max-width: 768px) {
            .table, .table thead, .table tbody, .table th, .table td, .table tr {
                display: block;
            }

            .table tr {
                margin-bottom: 15px;
                border-bottom: 2px solid #ddd;
                padding: 10px;
                border-radius: 10px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                background-color: white;
            }

            .table td {
                text-align: right;
                padding-left: 50%;
                position: relative;
            }

            .table td:before {
                content: attr(data-label);
                position: absolute;
                left: 10px;
                font-weight: bold;
                text-transform: uppercase;
            }
        }
        .alert {
            background-color: #f8d7da;
            color: #721c24;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            position: relative;
        }

        .alert button {
            background: none;
            border: none;
            color: #721c24;
            font-size: 16px;
            cursor: pointer;
            position: absolute;
            top: 5px;
            right: 10px;
        }
    </style>
</head>
<body>
    <%- include('navbar') %>

    <div class="container">
        <h2>Seller Dashboard</h2>
        <button class="add-product-btn" onclick="window.location.href='/sellers/addProduct'">+ Add New Product</button>
        <% if (sellerNotification) { %>
            <div id="seller-alert" class="alert">
                <span><%= sellerNotification %></span>
                <button onclick="document.getElementById('seller-alert').style.display='none'">âœ–</button>
            </div>
        <% } %>
        <table class="table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((product, index) => { %>
                    <tr>
                        <td data-label="No"><%= index + 1 %></td>
                        <td data-label="Image"><img src="<%= product.imageUrl %>" class="product-img"></td>
                        <td data-label="Name"><%= product.name %></td>
                        <td data-label="Category"><%= product.Category.name %></td>
                        <td data-label="Price">Rp <%= product.price.toLocaleString() %></td>
                        <td data-label="Action">
                            <a href="/sellers/products/<%= product.id %>/edit" class="edit-btn">Edit</a>
                            <a href="/sellers/delete/<%= product.id %>" class="delete-btn">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
